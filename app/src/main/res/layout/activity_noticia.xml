<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liodevel.my_reader.Noticia"
    android:background="#ffe8dada">

    <TextView
        android:id="@+id/titulo_noticia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:maxLines="3"
        android:lines="3"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:background="#ffe8dada"

        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/category_titulo_noticia"
        android:layout_toStartOf="@+id/category_titulo_noticia" />

    <TextView
        android:id="@+id/barra_verde"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:backgroundTint="#838e73"
        android:background="#838e73"
        android:layout_below="@+id/titulo_noticia"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/boton_abrir"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/open"
        android:textColor="#ffe8dada"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:background="#ffe8dada"
        android:gravity="center"
        android:textSize="26sp"
        android:backgroundTint="#838e73"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/contenido_noticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:paddingBottom="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#ffe8dada"

        android:layout_below="@+id/barra_verde"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/boton_abrir" />


    <TextView
        android:id="@+id/category_titulo_noticia"
        android:layout_width="wrap_content"
        android:textSize="40sp"
        android:padding="12dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="#838e73"
        android:layout_above="@+id/contenido_noticia"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <!--
    <WebView
        android:id="@+id/webViewNoticia"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignLeft="@+id/titulo_noticia"
        android:layout_alignStart="@+id/titulo_noticia"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/white"
        android:layout_below="@+id/contenido_noticia" />
        -->

</RelativeLayout>
