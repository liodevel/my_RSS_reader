<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#ffdcdcdc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffdcdcdc"
        android:padding="4dp"
        android:id="@+id/relative_layout_noticia">

        <TextView
            android:id="@+id/nombre_collection"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="left"
            android:textSize="18sp"
            android:layout_toStartOf="@+id/button_add_feed"
            android:layout_alignTop="@+id/button_add_feed"
            android:layout_toLeftOf="@+id/button_add_feed" />

        <TextView
            android:id="@+id/desc_collection"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="left"
            android:textSize="12sp"
            android:padding="4dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/button_add_feed"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/button_add_feed"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/add"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#ff387742"
            android:textColor="#ffdcdcdc" />


    </RelativeLayout>


</LinearLayout>