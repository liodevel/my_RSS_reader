<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#ffdcdcdc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffdcdcdc"
        android:padding="4dp"
        android:id="@+id/relative_layout_noticia">

        <TextView
            android:id="@+id/nombre_feed"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="left"
            android:textSize="18sp"
            android:layout_alignTop="@+id/url_feed"
            android:layout_toLeftOf="@+id/button_delete_feed"
            android:layout_toStartOf="@+id/button_delete_feed"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/url_feed"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="left"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/button_delete_feed"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/button_delete_feed"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/swipe_to_delete"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</LinearLayout>